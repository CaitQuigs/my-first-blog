<h1>About Page</h1>

<style>
	#color_me_in {
		background-color: <%= @color %>;
		color: white;
		width: 250px;
		height: 250px;
		text-align: center;
	}

	#color {
		padding: 25%;
	}
</style>

<div id="color_me_in">
	<p id="color"><%= @color.upcase %> BOX ACTIVATED!</p>
</div>

<%= form_tag index_path do %>
	<p><%= text_field_tag :name, nil, placeholder: "What's your name?" %></p>
	<p><%= submit_tag :submit %></p>
<% end %>
