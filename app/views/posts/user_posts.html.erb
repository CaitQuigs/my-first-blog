<h1>All Posts by <%= @user.username %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Blog entry</th>
      <th colspan="3">Options</th>
      </tr>
  </thead>

  <tbody>
    <% @user.posts.each do |post| %>
      <tr>
        <td><%= post.title.html_safe %></td>
        <td><%= post.blog_entry.html_safe %></td>
        <td><%= link_to 'Show', post, class: "btn btn-info" %> 
          <% if current_user.id == post.user_id %>
            <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %>
            <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Back to All Posts', posts_path %>