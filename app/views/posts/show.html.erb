<p id="notice"><%= notice %></p>

<p>
  <h2><%= @post.title.html_safe %></h2>
</p>

<p>
  By: <%= image_tag @post.user.avatar.thumb %> <em><%= link_to @post.user.username, user_posts_path(name: @post.user.username) %></em>
</p>

<p>
  <%= @post.blog_entry.html_safe %>
</p>

<p>
	<%= link_to 'Edit', edit_post_path(@post) %> |
</p>

<div id="comments">
	<%= render 'comments/form', comment: @comment %>

	<% @post.comments.each do |comment| %>
		<p>
			<%= link_to comment.user.username, user_posts_path(name:comment.user.username) %> said...<br />
			<%= comment.comment_entry.html_safe %>
		</p>
	<% end %>


</div>

<p>
	<%= link_to 'Back', posts_path %>
</p>